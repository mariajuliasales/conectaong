<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - conectaOng</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/conectaOng.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-size: 1.1rem; margin-left: 10px; font-weight: bolder;">ConectaONG</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <nav class="navbar navbar-expand-lg navbar-light bg-white">
                    <div class="container">

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                            <ul class="navbar-nav me-3">
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                       asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Organization" && ViewContext.RouteData.Values["action"]?.ToString() == "List" ? "active" : "")"
                                       asp-controller="Organization" asp-action="List">ONGs</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Event" && ViewContext.RouteData.Values["action"]?.ToString() == "List" ? "active" : "")"
                                       asp-controller="Event" asp-action="List">Eventos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Contato" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                       asp-area="" asp-controller="Contato" asp-action="Index">Contatos</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "User" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                       asp-area="" asp-controller="User" asp-action="List">Usuários</a>
                                </li>
                            </ul>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="d-flex align-items-center">
                                    <span class="fw-bold me-3">Bem-vindo, @User.Identity.Name</span>
                                    <form method="post" asp-controller="User" asp-action="Logout" class="d-inline">
                                        <button type="submit" class="btn btn-outline-dark">Logout</button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <a class="btn btn-outline-dark me-2" asp-area="" asp-controller="User" asp-action="Login">Login</a>
                                    <a class="btn btn-outline-dark" asp-area="" asp-controller="User" asp-action="Add">Registrar</a>
                                </div>
                            }
                        </div>
                    </div>
                </nav>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2025 - Conecta ONG - Todos os direitos reservados.
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>