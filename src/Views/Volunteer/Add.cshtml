@model conectaOng.Models.AddVolunteerViewModel

@{
    ViewData["Title"] = "Add";
    
    var userId = ViewBag.userId;
    Console.WriteLine("Esse é o userId do Volunteer" + userId);

}
<div class="container mt-5">
    <div class="row justify-content-center align-items-start">
    
        @*Titulo à esquerda*@
        <div class="col-md-4 text-start pe-5">
            <h1 class="fw-bold">Registrar<br/>Voluntários</h1>
        </div>

        @*Formulário*@
        <div class="col-md-6">
            <form asp-action="Add" class="border p-4 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Nome</label>
                    <input asp-for="Name" class="form-control" placeholder="Ex: João da Silva" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="row mb-3">
                    <div class="form-group col">
                        <label asp-for="Cpf" class="form-label">CPF</label>
                        <input asp-for="Cpf" class="form-control" placeholder="12345678987" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Sex" class="form-label">Sexo</label>
                        <select asp-for="Sex" class="form-select" asp-items="@(new SelectList(ViewBag.SexOptions, "Value", "Text"))"></select>
                        <span asp-validation-for="Sex" class="text-danger"></span>
                    </div>
                </div>
         
                <div class="form-group mb-3">
                    <label asp-for="Description" class="form-label">Descrição</label>
                    <input asp-for="Description" class="form-control" placeholder="Sou uma pessoa dedicada que busca ajudar os animais..." />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <input type="submit" value="Registrar" class="btn btn-dark" />
                </div>

                <div>
                    <input type="hidden" asp-for="UserId"/>  
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
