@model conectaOng.Models.Entities.Volunteer
@using System.Security.Claims

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <h1 class="fw-bold mb-4">Editar voluntário</h1>

    <div class="card shadow-sm p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label for="userName" class="form-label fw-semibold">Nome</label>
                <input type="text" id="userName" name="userName" class="form-control" value="@Model.User?.Name" />
            </div>

            <div class="mb-3">
                <label for="email" class="form-label fw-semibold">Email</label>
                <input type="email" id="email" name="email" class="form-control" value="@Model.User?.Email" />
            </div>

            <div class="mb-3">
                <label asp-for="Cpf" class="form-label fw-semibold">CPF</label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Sex" class="form-label fw-semibold">Sexo</label>
                <select asp-for="Sex" class="form-select" asp-items="@(new SelectList(ViewBag.SexOptions, "Value", "Text"))"></select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-semibold">Descrição</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @if (User.Identity.IsAuthenticated && User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model?.UserId.ToString())
            {
                <div class="d-flex mt-4">
                    <input type="submit" value="Salvar" class="btn btn-primary me-2" />
                </div>
            }
        </form>
    </div>

    <div class="mt-3">
        <a asp-action="List" class="btn btn-link">Voltar para lista de voluntários</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
