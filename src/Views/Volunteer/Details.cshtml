@model conectaOng.Models.Entities.Volunteer
@using System.Security.Claims

@{
    ViewData["Title"] = "Detalhes de Voluntario";
}

<h1>Detalhes de Voluntário</h1>

<div>
    <h2>
        @Html.DisplayFor(model => User.Identity.Name)
    </h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sex)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sex)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        @if (User.Identity.IsAuthenticated && User.FindFirst(ClaimTypes.NameIdentifier)?.Value == Model?.UserId.ToString())
        {
            <div class="d-flex align-items-center">
                <a class="btn btn-primary me-2"  asp-action="Edit" asp-route-id="@Model?.Id">Editar perfil</a>
            </div>

            <div class="d-flex align-items-center">
                <a class="btn btn-primary me-2" asp-action="Delete" asp-route-id="@Model?.Id">>Deletar perfil</a>
            </div>
        }
    </dl>
</div>