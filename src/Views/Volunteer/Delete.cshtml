@model conectaOng.Models.Entities.Volunteer

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <h1 class="fw-bold mb-3">Deletar voluntário</h1>

    <h5 class="mb-4">Você tem certeza que deseja deletar a sua conta?</h5>

    <div class="card shadow-sm p-4">
        <h4 class="fw-semibold mb-3">Informações do Voluntário</h4>
        <dl class="row">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.User.Email)</dd>

            <dt class="col-sm-3">CPF</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cpf)</dd>

            <dt class="col-sm-3">Sexo</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Sex)</dd>

            <dt class="col-sm-3">Descrição</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4 d-flex align-items-center">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Deletar" class="btn btn-danger me-3" />
            <a asp-action="List" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>
