@model AddEventViewModel

<h1>Adicionar Evento</h1>

<form method="post">
    <!-- Campo oculto para o ID da organização -->
    <input type="hidden" asp-for="OrganizationId" value="@ViewBag.OrganizationId" />

    <div class="form-group">
        <label for="Title">Título</label>
        <input asp-for="Title" class="form-control" id="Title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Description">Descrição</label>
        <textarea asp-for="Description" class="form-control" id="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Date">Data</label>
        <input asp-for="Date" type="date" class="form-control" id="Date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Location">Localização</label>
        <input asp-for="Location" type="text" class="form-control" id="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-page="/Event/List" class="btn btn-secondary">Cancelar</a>
</form>
