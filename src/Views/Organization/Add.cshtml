@{
}

@model AddOrganizationViewModel

<h1>Registrar ONG</h1>


<form method="post">
    <div class="mt-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">CNPJ</label>
        <input type="text" class="form-control" asp-for="CNPJ" />
    </div>

    <div class="mt-3">
        <label class="form-label">Categoria</label>
        <input type="text" class="form-control" asp-for="Categoria" />
    </div>

    <div class="mt-3">
        <label class="form-label">Descrição</label>
        <input type="text" class="form-control" asp-for="Descricao" />
    </div>

    <input type="hidden" asp-for="UserId" value="@ViewBag.userId" />

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>

    <script>
        $(document).ready(function () {
            const $cnpjInput = $('input[asp-for="CNPJ"]');

            $cnpjInput.mask('00.000.000/0000-00');

            $('form').on('submit', function () {
                $cnpjInput.val($cnpjInput.val().replace(/\D/g, ''));
            });
        });
    </script>
}