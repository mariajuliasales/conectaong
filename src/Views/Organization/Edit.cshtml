@{
}

@model conectaOng.Models.Entities.Organization

<h1>Editar ONG</h1>

@if (Model is null)
{
    <p>Nenhuma ONG encontrada</p>
}

else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">CNPJ</label>
            <input type="text" class="form-control" asp-for="CNPJ" />
        </div>

        <div class="mt-3">
            <label class="form-label">Categoria</label>
            <input type="text" class="form-control" asp-for="Categoria" />
        </div>

        <div class="mt-3">
            <label class="form-label">Descrição</label>
            <input type="text" class="form-control" asp-for="Descricao" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Organization">Delete</button>
        </div>
    </form>
}